@model List< UI.Models.Course.CourseViewModel>

@{
	string formattedDateTime = DateTime.Now.Year + "-" + DateTime.Now.Month + "-" + DateTime.Now.Day + "T" + DateTime.Now.Hour + ":" + DateTime.Now.Minute;
}

@using (Html.BeginForm("Create", "Exam", FormMethod.Post, new { Id = "frmCreate" }))
{
	<div id="createExamForm" class="modal fade" tabindex="-1" role="dialog" aria-labelledby="createCourseForm" aria-hidden="true">
		<div class="modal-dialog modal-dialog-centered">
			<div class="modal-content">
				<div class="modal-header">
					<h6 class="modal-title">Sınav Ekleme</h6>
					<button id="closeCreateModal" type="button" class="btn btn-secondary" data-bs-dismiss="modal">&times;</button>
				</div>
				<div class="modal-body">
					<form>
						<fieldset>
							<div class="form-group">
								<label>Sınav Adı</label>
								<input type="text" name="ExamName" placeholder="Lütfen sınav adını giriniz" class="form-control small-input" id="ExamName" />
							</div>
						</fieldset>

						<fieldset>
							<div class="form-group">
								<label>Açıklama</label>
								<input type="text" name="ExamDescription" placeholder="Lütfen sınav açıklaması giriniz" class="form-control small-input" id="ExamDescription" />
							</div>
						</fieldset>

						<label for="party">Başlangıç Tarihi</label>
						<input id="party" type="datetime-local" name="ExamStartTime" value="@formattedDateTime" style="width:100%" />



						<label for="party">Bitiş Tarihi</label>
						<input id="party" type="datetime-local" name="ExamEndTime" value="@formattedDateTime" style="width:100%" />

						<div class="form-group">
							<label for="exampleFormControlSelect1">Ders</label>
							<select class="form-control" name="CourseId">
								@foreach (var item in Model)
								{
									<option value=@item.Id>@item.Name</option>
								}
							</select>
						</div>

					</form>
				</div>
				<div class="modal-footer">
					<div class="btn-group">
						<button type="submit" class="btn btn-sm btn-outline-secondary" data-bs-dismiss="modal">Kaydet</button>
					</div>
				</div>
			</div>
		</div>
	</div>
}

<script>
	$('#closeCreateModal').click(function () {
		$('#ModalCreate').modal('hide');
	});
</script>
