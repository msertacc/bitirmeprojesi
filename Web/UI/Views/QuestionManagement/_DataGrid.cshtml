@model IEnumerable<UI.Models.Question.QuestionViewModel>
<section class="section-content">
	<div class="row">
		<div class="col-lg-6 col-md-6 col-sm-12 col-xs-12 actions-left">
			<button onclick="CreateQuestion(@ViewBag.ExamId);" type="button" style="margin-bottom:5px;margin-top:10px;" class="btn btn-success" tooltip="Kayıt Ekleme">Kayıt Ekleme</button>
		</div>
	</div>

	<div class="row">
		<table class="table table-bordered" id="courseTable">
			<thead>
				<tr>
					<th scope="col">İşlemler</th>
					<th scope="col">Soru Başlığı</th>
					<th scope="col">Soru Tipi</th>
					<th scope="col">Puan</th>
				</tr>
			</thead>
			<tbody>
				@foreach (var item in Model)
				{
					<tr modelId="@item.Id">
						<td>
							<button onclick="UpdateQuestion(@item.Id);" type="button" class="btn btn-primary" title="Soruyu güncellemek için tıklayınız">
								<svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-pen" viewBox="0 0 16 16">
									<path d="m13.498.795.149-.149a1.207 1.207 0 1 1 1.707 1.708l-.149.148a1.5 1.5 0 0 1-.059 2.059L4.854 14.854a.5.5 0 0 1-.233.131l-4 1a.5.5 0 0 1-.606-.606l1-4a.5.5 0 0 1 .131-.232l9.642-9.642a.5.5 0 0 0-.642.056L6.854 4.854a.5.5 0 1 1-.708-.708L9.44.854A1.5 1.5 0 0 1 11.5.796a1.5 1.5 0 0 1 1.998-.001zm-.644.766a.5.5 0 0 0-.707 0L1.95 11.756l-.764 3.057 3.057-.764L14.44 3.854a.5.5 0 0 0 0-.708l-1.585-1.585z" />
								</svg>
							</button>
							<button onclick="openDeleteModal(@item.Id);" type="button" class="btn btn-outline-danger" title="Soruyu silmek için tıklayınız">
								<svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-trash" viewBox="0 0 16 16">
									<path d="M5.5 5.5A.5.5 0 0 1 6 6v6a.5.5 0 0 1-1 0V6a.5.5 0 0 1 .5-.5Zm2.5 0a.5.5 0 0 1 .5.5v6a.5.5 0 0 1-1 0V6a.5.5 0 0 1 .5-.5Zm3 .5a.5.5 0 0 0-1 0v6a.5.5 0 0 0 1 0V6Z" />
									<path d="M14.5 3a1 1 0 0 1-1 1H13v9a2 2 0 0 1-2 2H5a2 2 0 0 1-2-2V4h-.5a1 1 0 0 1-1-1V2a1 1 0 0 1 1-1H6a1 1 0 0 1 1-1h2a1 1 0 0 1 1 1h3.5a1 1 0 0 1 1 1v1ZM4.118 4 4 4.059V13a1 1 0 0 0 1 1h6a1 1 0 0 0 1-1V4.059L11.882 4H4.118ZM2.5 3h11V2h-11v1Z" />
								</svg>
							</button>
						</td>
						<td>@item.QuestionText</td>
						<td>@item.QuestionTypes.TypeName</td>
						<td>@item.Score</td>
					</tr>
				}
			</tbody>
		</table>
	</div>
</section>

<script>
	function CreateQuestion(examId) {
		window.location.href = '@Url.Action("CreateQuestionAndAnswer", "QuestionManagement")' + "?id=" + examId;
	}

	function UpdateQuestion(id) {
		window.location.href = '@Url.Action("UpdateQuestionAndAnswer", "QuestionManagement")' + "?id=" + id;
	}

	function openDeleteModal(id) {
		$.ajax({
			type: 'GET',
			url: '/QuestionManagement/_Delete',
			data: { id: id },
			success: function (data) {
				console.log(data)
				$("#ModalDelete").html(data);
				$("#deleteQuestionForm").modal('show');
				$("#ModalDelete").modal('show');
			}
		});
	}
</script>